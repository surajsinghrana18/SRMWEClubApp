<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="116dp"
    android:layout_height="177.3dp"
    android:layout_marginLeft="3.3dp"
    android:layout_marginTop="2.7dp"
    android:layout_marginRight="3.3dp"
    android:layout_marginBottom="2.7dp"
    android:elevation="10dp"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/vendView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/vendImg"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            app:srcCompat="@drawable/app_background" />

        <TextView

            android:id="@+id/vendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="104dp"
            android:text="Biggies"
            android:textColor="#ffffff"

            android:textSize="10.7sp" />

        <TextView
            android:id="@+id/vendLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="117dp"
            android:text="near srm ist, modi"
            android:textColor="#e4e4e4"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="150dp"
            android:text="Discount upto 10%"
            android:textColor="#595959"
            android:textSize="9.3sp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
